<!--custom-tab-bar/index.wxml-->
<view class="tabBarList">
  <view class="tabBarItem {{defaultCurrentPath == item.path ? 'active' : ''}}" data-path="{{item.path}}" wx:for="{{tabs}}" bindtap="tabChange" wx:key="text">
    <wux-icon size="26" type="{{item.icon}}"></wux-icon>
    <view class="tabBarItemText">{{item.text}}</view>
  </view>
</view>