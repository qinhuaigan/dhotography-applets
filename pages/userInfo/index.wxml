<!--pages/userInfo/index.wxml-->
<!-- 消息提示 -->
<wux-toptips id="wux-toptips" />
<view class="pageHead">
  <view class="avatar">
    <wux-image bindtap="uploadAvatar" mode="aspectFill" wux-class="image" error="未上传" empty="未上传" width="156rpx" height="156rpx" shape="circle" src="{{userInfo.avatar}}" />
  </view>
  <view class="userName">点击更换头像</view>
</view>
<view class="content">
  <view class="mt10px">
    <view class="box">
      <view class="menuList">
        <view class="menuItem borderBottom clearfix">
          <view class="fl w25 label">我的昵称：</view>
          <view class="fl w75">
            <input class="myInput" value="{{userInfo.chineseName}}" type="text" placeholder="请输入昵称" />
          </view>
        </view>
        <view class="menuItem borderBottom clearfix">
          <view class="fl w25 label">手机号码：</view>
          <view class="fl w75">{{userInfo.username}}</view>
        </view>
        <view class="menuItem borderBottom clearfix">
          <view class="fl w25 label">我的性别：</view>
          <view class="fl w75">
            <radio-group>
              <radio value="0" checked="{{userInfo.gender}}" class="mr10px">男</radio>
              <radio value="1" checked="{{userInfo.gender}}" class="mr10px">女</radio>
              <radio value="2" checked="{{userInfo.gender}}">保密</radio>
            </radio-group>
          </view>
        </view>
        <view class="menuItem borderBottom clearfix">
          <view class="fl w25 label">所在省区：</view>
          <view class="fl w75">
            <picker mode="region" bindchange="bindRegionChange" value="{{userInfo.provincialArea}}" custom-item="{{customItem}}">
              <view class="picker">{{userInfo.provincialArea[0]}}-{{userInfo.provincialArea[1]}}-{{userInfo.provincialArea[2]}}
              </view>
            </picker>
          </view>
        </view>
        <view class="menuItem borderBottom clearfix">
          <view class="fl w25 label">详细地址：</view>
          <view class="fl w75">
            <input class="myInput" type="text" placeholder="请输入详细地址" />
          </view>
        </view>
        <view class="menuItem borderBottom clearfix">
          <view class="fl w25 label">我的身份：</view>
          <view class="fl w75">普通用户</view>
        </view>
        <view class="menuItem clearfix">
          <view class="fl w25 label">我的邮箱：</view>
          <view class="fl w75">{{userInfo.email}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class="mt40px">
    <wux-button block type="assertive" bindtap="loginOut">保存</wux-button>
  </view>
</view>